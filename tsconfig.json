{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "target": "ES2020",
    "jsx": "react-jsx",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["./app/**/*", "custom-tyings.d.ts"]
}
